extends /partials/layout

block content
  div.album-page
    h1.album-title #{album.title}
      em.album-artist by #{album.artist}

    if reviews.length
      h1 Reviews
        a(href=`/albums/${album.id}/reviews/new`)
          button.add-review-button(type="button") Add review

        each review in reviews
            h3 #{review.title} 
              span.album-review-date #{humanReadableDate(review.date_posted)}
            p #{review.content}
            h4 by #{review.author}
            form(action=`/reviews/${review.review_id}?_method=DELETE`, method="POST", onsubmit=`return confirm('Are you sure you want to delete this review?')`)
              button.delete-button
                i.fa.fa-trash.fa-2x(aria-hidden='true')
