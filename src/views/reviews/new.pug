extends /partials/layout

block content
  div.new-review
    h1 New review for #{album.title}
    form.flex-full(action=`/albums/${album.id}/reviews/new`, method="post")
      div
        select(name="rating")
          option(value='5') ⭐️⭐️⭐️⭐️⭐️  
          option(value='4') ⭐️⭐️⭐️⭐️
          option(value='3') ⭐️⭐️⭐️
          option(value='2') ⭐️⭐️
          option(value='1') ⭐️
      div
        textarea.new-review-textarea(type="text", name="content")
      div 
        input.new-review-submit-btn(type="submit", placeholder="Submit")
    
